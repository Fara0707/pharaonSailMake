<html>
<style>
    table {
        border-collapse: collapse;
    }

    table, td, th {
        border: 2px solid #999;
        padding: 5px;
    }
</style>

<body>
<form method="get" action="orders">
    <input type="submit" value="Вернуться в меню заказов">
</form>

<div>
    <form method="post" action="addSail">
        <input type="number" name="SailType_id" placeholder="ID тип паруса">
        <input type="number" name="Cut_id" placeholder="Расскрой">
        <input type="number" step="0.01" name="LengthLeech" placeholder="Длина задней шкаторины">
        <input type="number" step="0.01" name="LengthLuff" placeholder="Длина передней шкаторины">
        <input type="number" step="0.01" name="LengthFoot" placeholder="Длина нижней шкаторины">
        <input type="number" step="0.01" name="SickleLeech" placeholder="Серп задней шкаторины">
        <input type="number" step="0.01" name="SickleLuff" placeholder="Серп передней шкаторины">
        <input type="number" step="0.01" name="SickleFoot" placeholder="Серп нижней шкаторины">
        <input type="number" step="0.01" name="Seam" placeholder="Закладка">
        <input type="number" step="0.01" name="ElapsedLength" placeholder="Погонных метров ткани потрачено">
        <input type="number" name="Client_id" placeholder="ID клиента">
        <input type="number" name="Worker_id" placeholder="ID работника">
        <input type="number" name="DeliverieCloth_id" placeholder="ID поставки ткани">
        <button type="submit">Добавить парус</button>
    </form>
</div>

<div>
    <form method="post" action="deleteSail">
        <input type="number" name="id" placeholder="ID паруса">
        <button type="submit">Удалить парус</button>
    </form>
</div>

<div><b>Список типов парусов</b></div>
<table>
    <tr>
        <th>ID</th>
        <th>Название</th>
    </tr>
    {{#SailTypes}}
    <tr>
        <td>{{id}}</td>
        <td>{{Type}}</td>
    </tr>
    {{/SailTypes}}
</table>
<div><b>Список покроев</b></div>
<table>
    <tr>
        <th>ID</th>
        <th>Название</th>
    </tr>
    {{#SailCuts}}
    <tr>
        <td>{{id}}</td>
        <td>{{Cut}}</td>
    </tr>
    {{/SailCuts}}
</table>

<div><b>Список парусов</b></div>
    <table>
        <tr>
            <th>ID</th>
            <th>Тип паруса</th>
            <th>Раскрой</th>
            <th>Длина задней</th>
            <th>Длина передней</th>
            <th>Длина нижней</th>
            <th>Серп задней</th>
            <th>Серп передней</th>
            <th>Серп нижней</th>
            <th>Закладка</th>
            <th>Метров потрачено</th>
            <th>Цена</th>
            <th>Имя Клиента</th>
            <th>Фамилия Клиента</th>
            <th>Работник</th>
            <th>Поставка ткани</th>
        </tr>
        {{#Sails}}
        <tr>
            <td>{{id}}</td>
            <td>{{SailType_id.Type}}</td>
            <td>{{Cut_id.Cut}}</td>
            <td>{{LengthLeech}}</td>
            <td>{{LengthLuff}}</td>
            <td>{{LengthFoot}}</td>
            <td>{{SickleLeech}}</td>
            <td>{{SickleLuff}}</td>
            <td>{{SickleFoot}}</td>
            <td>{{Seam}}</td>
            <td>{{ElapsedLength}}</td>
            <td>{{Price}}</td>
            <td>{{Client_id.FirstName}}</td>
            <td>{{Client_id.SurName}}</td>
            <td>{{Worker_id.Name}}</td>
            <td>{{DeliverieCloth_id.id}}</td>
        </tr>
        {{/Sails}}
    </table>

</body>

</html>