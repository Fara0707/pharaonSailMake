<html lang="en">

<head>

    <!-- Character set configuration -->
    <meta charset="UTF-8">

    <!-- Viewport configuration, scaling options -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

    <!-- MS tile icons -->
    <meta name="msapplication-TileColor" content="#00C264">
    <link rel="shortcut icon" href="/images/logoBlueRound.png" type="image/png">

    <link rel="icon" type="image/png" href="/images/logoBlueRound.png" sizes="96x96">

    <!-- Stylesheets -->
    <link rel="stylesheet" href="styles/css/stylesForWorkers.css">

    <!-- Site title -->
    <title>Client</title>

</head>

<body class="button-container">
<a href="/registrations">Вернуться в меню регистрации</a>

<div>
    <form method="post" action="addClient">
        <input class="edit bk" class="edit bk" type="text" name="SurName" placeholder="Фамилия">
        <input class="edit bk" type="text" name="FirstName" placeholder="Имя">
        <input class="edit bk" type="text" name="Town" placeholder="Город">
        <input class="edit bk" type="text" name="MobileTel" placeholder="Моб.номер">
        <input class="edit bk" type="number" name="NewPostNumber" placeholder="Номер новой почты">
        <button type="submit">Добавить клиента</button>
    </form>
</div>

<div>
    <form method="post" action="deleteClient">
        <input class="edit bk" type="number" name="id" placeholder="ID клиента">
        <button type="submit">Удалить клиента</button>
    </form>
</div>


<div><h1><b>Список клиентов</b></h1></div>
    <table>
        <tr>
            <th>ID</th>
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Город</th>
            <th>Мобильны телефон</th>
            <th>Номер новой почты</th>
        </tr>
        {{#Clients}}
        <tr>
            <td>{{id}}</td>
            <td>{{SurName}}</td>
            <td>{{FirstName}}</td>
            <td>{{Town}}</td>
            <td>{{MobTel}}</td>
            <td>{{NewPostNumber}}</td>
        </tr>
        {{/Clients}}
    </table>

</body>

</html>